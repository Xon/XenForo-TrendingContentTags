<addon addon_id="SV_TrendingContentTags" title="Tending Content Tags" version_string="1.0.0" version_id="10000" url="" install_callback_class="SV_TrendingContentTags" install_callback_method="install" uninstall_callback_class="SV_TrendingContentTags" uninstall_callback_method="uninstall">
  <admin_navigation/>
  <admin_permissions/>
  <admin_style_properties/>
  <admin_templates/>
  <admin_template_modifications/>
  <code_events/>
  <code_event_listeners>
    <listener event_id="load_class" execute_order="10" callback_class="SV_TrendingContentTags_Listener" callback_method="load_class" active="1" hint="XenForo_ControllerPublic_Forum" description="XenForo_ControllerPublic_Forum"/>
    <listener event_id="load_class" execute_order="10" callback_class="SV_TrendingContentTags_Listener" callback_method="load_class" active="1" hint="XenForo_Model_Tag" description="XenForo_Model_Tag"/>
  </code_event_listeners>
  <cron/>
  <email_templates/>
  <email_template_modifications/>
  <optiongroups/>
